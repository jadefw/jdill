---
import Link from "./Link.astro";

const links = [
  {
    title: "GitHub",
    href: "https://go.jdill.dev/github",
  },
  {
    title: "Twitter",
    href: "https://go.jdill.dev/x",
  },
];
---

<section class="py-6">
  <h1 class="text-3xl text-pretty">Jonas Dillenkofer</h1>
  <p class="mt-2 text-muted text-lg text-pretty">
    Web developer from germany. I like football, music &amp; tech.
  </p>
  <div class="mt-4 flex gap-4">
    {
      links.map((link) => (
        <Link href={link.href} newTab>
          {link.title}
        </Link>
      ))
    }
  </div>
</section>
